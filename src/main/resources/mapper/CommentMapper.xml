    select * from comment
    <where>
      1=1
      <if test="blogId != null">
        and blog_id = #{blogId,jdbcType=INTEGER}
      </if>
      <if test="isAdmin != 1">
        and statu = 1
      </if>
    </where>
    order by create_time desc
  </select>

