    insert into comment (id, content, create_time, 
      pid, statu, blog_id)
    values (#{id,jdbcType=INTEGER}, #{content,jdbcType=VARCHAR}, #{createTime,jdbcType=TIMESTAMP}, 
      #{pid,jdbcType=INTEGER}, #{statu,jdbcType=INTEGER}, #{blogId,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" parameterType="com.xsx.blog.model.Comment" >
    insert into comment
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="content != null" >
        content,
      </if>
      <if test="createTime != null" >
        create_time,
      </if>
      <if test="pid != null" >
        pid,
      </if>
      <if test="statu != null" >
        statu,
      </if>
      <if test="blogId != null" >
        blog_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=INTEGER},
      </if>
